<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#343e56"
    tools:context="com.gaming.Xogame.MainActivity">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn6"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginRight="20dp"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           </ImageView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn4"
        android:layout_toLeftOf="@id/btn5"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ImageView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#f69e78"
        android:layout_centerInParent="true"
        android:layout_above="@id/btn5"
        android:layout_margin="8dp">

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#f69e78"
        android:layout_centerInParent="true"
        android:layout_below="@id/btn5"
        android:layout_margin="8dp">

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#f69e78"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn5"
        android:layout_marginRight="-14dp">

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#f69e78"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginLeft="-14dp">

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/reset"
        android:backgroundTint="@color/purple_200"
        android:text="Reset"
        android:textColor="#F7FBFB"
        android:textSize="15sp"></androidx.appcompat.widget.AppCompatButton>



    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn8"
        android:layout_below="@id/btn5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn2"
        android:layout_above="@id/btn5"
       android:layout_marginBottom="24sp"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn1"
        android:layout_above="@id/btn5"
        android:layout_toLeftOf="@id/btn5"
        android:layout_marginBottom="24sp"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn3"
        android:layout_above="@id/btn5"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginBottom="24sp"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn7"
        android:layout_below="@id/btn5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@id/btn5"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          </ImageView>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn9"
        android:layout_below="@id/btn5"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/btn5"
        android:background="#343e56">


        <ImageView
            android:id="@+id/imgbutton9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            </ImageView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="40sp"
        android:paddingLeft="40sp"
        android:layout_marginTop="40sp"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="score x : 0"
            android:textColor="#FBF7F7"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/scorex">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="score y : 0"
            android:textColor="#FBF7F7"
            android:textStyle="bold"
            android:id="@+id/scorey"
            android:textSize="30sp">
        </TextView>


    </LinearLayout>


</RelativeLayout>